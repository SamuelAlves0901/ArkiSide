---
import ServiceCard from '../common/ServiceCard.astro';
import Button from '../common/Button.astro';

const services = [
  {
    title: "Desenvolvimento de Websites",
    description: "Criação de websites modernos, rápidos e responsivos, preparados para gerar resultados reais para seu negócio.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
    </svg>`,
    href: "https://curious-pavlova-40a13c.netlify.app/"
  },
  {
    title: "Consultoria e Estratégias",
    description: "Consultoria especializada para aumentar a visibilidade online de produtos, serviços ou marcas no mercado digital.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
    </svg>`,
    href: "https://aesthetic-souffle-e6c99c.netlify.app/"
  },
  {
    title: "Otimização para SEO",
    description: "Otimização completa para melhorar o ranking no Google e outros mecanismos de busca, tornando sua empresa mais visível.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>`,
    href: "https://playful-alpaca-81614d.netlify.app/"
  },
  {
    title: "Marketing Digital",
    description: "Gestão de campanhas de marketing digital, incluindo anúncios no Google e redes sociais para maximizar seu alcance.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
    </svg>`,
    href: "https://golden-hummingbird-01db5e.netlify.app/"
  }
];
---

<section class="section">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <h2 class="section-title">Nossos Serviços</h2>
      <p class="section-subtitle">
        Oferecemos soluções digitais completas para impulsionar seu negócio no ambiente online, desde o desenvolvimento de websites até estratégias avançadas de marketing digital.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
          href={service.href}
        />
      ))}
    </div>

    <div class="text-center mt-12" data-aos="fade-up">
      <Button href="https://poetic-fenglisu-a9bb0a.netlify.app/" variant="primary">
        Ver todos os serviços
      </Button>
    </div>
  </div>
</section>