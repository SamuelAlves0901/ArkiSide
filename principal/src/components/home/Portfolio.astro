---
import Button from '../common/Button.astro';

const projects = [
  {
    title: "Loja Virtual NaturEco",
    category: "E-commerce",
    image: "https://images.pexels.com/photos/6214476/pexels-photo-6214476.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    href: "https://shimmering-klepon-532b3c.netlify.app/"
  },
  {
    title: "Instituto Educacional Futuro",
    category: "Website Institucional",
    image: "https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    href: "https://guileless-entremet-7a7917.netlify.app/"
  },
  {
    title: "BrazTech Solutions",
    category: "Website Corporativo",
    image: "https://images.pexels.com/photos/3182812/pexels-photo-3182812.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    href: "https://benevolent-granita-158ac6.netlify.app/"
  }
];
---

<section class="section">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <h2 class="section-title">Portfólio de Projetos</h2>
      <p class="section-subtitle">
        Conheça alguns dos projetos que desenvolvemos para empresas de diversos segmentos, transformando suas presenças digitais e impulsionando seus resultados.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {projects.map(project => (
        <a href={project.href} class="group" data-aos="fade-up">
          <div class="relative overflow-hidden rounded-lg shadow-md">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6 text-white">
              <span class="text-sm text-white/80 mb-1">{project.category}</span>
              <h3 class="text-xl font-bold text-white">{project.title}</h3>
              <span class="inline-flex items-center mt-2 text-sm font-medium text-white/90 opacity-0 group-hover:opacity-100 transition-opacity">
                Ver projeto
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12" data-aos="fade-up">
      <Button href="https://kaleidoscopic-truffle-198a28.netlify.app/">
        Ver portfólio completo
      </Button>
    </div>
  </div>
</section>