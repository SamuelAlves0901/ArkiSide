---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { 
  variant = 'primary', 
  href, 
  type = 'button',
  class: className = '',
} = Astro.props;

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  outline: 'btn bg-transparent text-primary-600 border border-primary-600 hover:bg-primary-50',
};

const buttonClass = `${variantClasses[variant]} ${className}`;
---

{
  href ? (
    <a href={href} class={buttonClass}>
      <slot />
    </a>
  ) : (
    <button type={type} class={buttonClass}>
      <slot />
    </button>
  )
}