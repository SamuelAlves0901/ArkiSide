---
export interface Props {
  quote: string;
  author: string;
  company: string;
  image?: string;
}

const { 
  quote, 
  author, 
  company, 
  image = "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg?auto=compress&cs=tinysrgb&w=600" 
} = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-md border border-gray-100" data-aos="fade-up">
  <div class="flex items-center mb-4">
    <div class="w-12 h-12 rounded-full overflow-hidden mr-4">
      <img src={image} alt={author} class="w-full h-full object-cover" />
    </div>
    <div>
      <h4 class="font-semibold text-lg">{author}</h4>
      <p class="text-gray-600 text-sm">{company}</p>
    </div>
  </div>
  <div class="text-gray-700">
    <svg class="w-8 h-8 text-primary-100 mb-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
    <p class="text-gray-600">{quote}</p>
  </div>
</div>