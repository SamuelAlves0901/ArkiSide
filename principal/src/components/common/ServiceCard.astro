---
export interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-md border border-gray-100 transition-all duration-300 hover:shadow-lg" data-aos="fade-up">
  <div class="text-primary-600 mb-4">
    <Fragment set:html={icon} />
  </div>
  <h3 class="text-xl font-semibold mb-3">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <a href={href} class="text-primary-600 font-medium inline-flex items-center group hover:text-primary-700">
    Saiba mais
    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
    </svg>
  </a>
</div>